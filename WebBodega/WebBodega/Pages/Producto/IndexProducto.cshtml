<table class="table" id="tblProducto">
    <tr>
        <th>
            @Html.DisplayName("Nombre")
        </th>
        <th>
            @Html.DisplayName("Descripcion")
        </th>
        <th>
            @Html.DisplayName("Categoria")
        </th>
        <th>
            @Html.DisplayName("Fecha Expiración")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Productos)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Descripcion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NombreCategoria)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FechaExpiracion)
    </td>
    <td>
        <a asp-page="/Producto/EditarProducto" asp-route-id="@item.IdProducto">Editar</a>

        <button class="btn btn-xs btn-danger"
                id="btnEliminarCliente"
                data-prop="@item.IdProducto"
                data-tooltip="tooltip"
                data-placement="top"
                title="Eliminar Sección!">
            Eliminar
        </button>
    </td>
</tr>
    }

</table>

<div class="modal fade" id="ModalAgregarCliente" tabindex="-1" role="dialog" aria-labelledby="myModalAgregarCliente">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="myModalAgregarCliente">Agregar Cliente</h4>
            </div>
            <div id="divAgregarCliente">
                <div class="modal-body-trans">
                    Cargando...
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="ModalEditarCliente" tabindex="-1" role="dialog" aria-labelledby="myModalEditarCliente">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="myModalEditarCliente">Editar Clientes</h4>
            </div>
            <div id="divEditarCliente">
                <div class="modal-body-trans">
                    Cargando...
                </div>
            </div>

        </div>
    </div>
</div>