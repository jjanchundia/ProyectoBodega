<table class="table" id="tblClientes">
    <tr>
        <th>
            @Html.DisplayName("Nombre")
        </th>
        <th>
            @Html.DisplayName("Descripcion")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Bodegas)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <a asp-page="/Bodegas/EditarBodega" asp-route-id="@item.IdBodega">Editar</a>
                <a asp-page="./IndexBodega" onclick="return confirm('Eliminar Bodega?');" 
                   asp-page-handler="Delete" asp-route-id="@item.IdBodega">Eliminar</a>
            </td>
        </tr>
    }

</table>

